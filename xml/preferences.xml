<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="pop_up"
        android:summaryOff="@string/pop_up_no_summary"
        android:summaryOn="@string/pop_up_yes_summary"
        android:title="@string/pop_up_title" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="switch_preference_1"
        android:summaryOff="@string/email"
        android:summaryOn="@string/phone"
        android:title="@string/contact_system" />

    <EditTextPreference
        android:key="bgl_range"
        android:title="@string/ideal_bgl_title"
        android:summary="@string/ideal_bgl_summary"
        android:selectAllOnFocus="true" />

    <EditTextPreference
        android:key="email"
        android:title="@string/email_title"
        android:summary="@string/email_summary"
        android:selectAllOnFocus="true" />

    <EditTextPreference
        android:key="phone"
        android:title="@string/phone_title"
        android:summary="@string/phone_summary"
        android:selectAllOnFocus="true" />

    <EditTextPreference
        android:defaultValue="false"
        android:key="nurse"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="@string/plus"
        android:title="@string/nurse" />
    <ListPreference
        android:defaultValue="mmol/L"
        android:entries="@array/units_titles"
        android:entryValues="@array/units_list"
        android:key="units"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/units_title"
        android:summary="@string/units_summary"/>

</PreferenceScreen>
